<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="container" style="margin-top: 50px;">
    <%- include('../layout/nav') %>
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-link">
                    <h1>
                        Payment Management
                    </h1>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Username ID</th>
                            <th scope="col">Psychologist ID</th>
                            <th scope="col">Slip</th>
                            <th scope="200px"> </th>
                            <th scope="200px">Action</th>
                            <th scope="200px"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < data.length; i++) {%>
                            <tr>
                                <th scope="row">
                                    <%= (i+1) %>
                                </th>
                                <td>
                                    <%= data[i].psychonist_appointments_id %>
                                </td>
                                <td>
                                    <%= data[i].user_id %>
                                </td>
                                <td>
                                    <%= data[i].slip %>
                                </td>
                                <td>
                                    <%= data[i].postingdate %>
                                </td>
                                <td>
                                    <form method="POST" action="/admin/approve-payment">
                                        <input type="hidden" name="psychonist_appointments_id" value="<%= data[i].psychonist_appointments_id %>">
                                        <input type="hidden" name="user_id" value="<%= data[i].user_id %>">
                                        <input type="hidden" name="status" value="In Coming">
                                        <button type="submit" class="btn btn-success">Approve</button>
                                    </form>
                                </td>
                                <td>   
                                    <a  onclick="return alert('Are you sure?')"
                                        class="btn btn-success btn-danger">Reject</a>
                                </td>
                            </tr>
                            <% }%>
                    </tbody>
                </table>
                <% } %>
                    <% if(!data.length) { %>
                        <p class="text-center">No psychonist</p>
                        <% } %>
        </div>
    </div>
</body>
</html>