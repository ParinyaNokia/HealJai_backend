<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="container" style="margin-top: 50px;">
    <%- include('../layout/nav') %>
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-link">
                    <h1>
                        Payment Management
                    </h1>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Username</th>
                            <th scope="col">Psychonistname</th>
                            <th scope="col">Time Appointment</th>
                            <th scope="200px">View</th>
                            <th scope="200px">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < data.length; i++) {%>
                            <tr>
                                <th scope="row">
                                    <%= (i+1) %>
                                </th>
                                <td>
                                    <%= data[i].user_name %>
                                </td>
                                <td>
                                    <%= data[i].doc_name %>
                                </td>
                                <td>
                                    <%= data[i].appoint_time %>
                                </td>
                                <td>
                                    <a class="btn details-link" href="/psychonist/paymentsdetails?user_name=<%= data[i].user_name %>&doc_name=<%= data[i].doc_name %>&appoint_time=<%= data[i].appoint_time %>">Details</a>


                                </td>
                                <td>
                                    <a  class="btn btn-success edit">Aprove</a>
                                    <a  onclick="return alert('Are you sure?')"
                                        class="btn btn-success btn-danger">Reject</a>
                                </td>
                            </tr>
                            <% }%>
                    </tbody>
                </table>
                <% } %>
                    <% if(!data.length) { %>
                        <p class="text-center">No psychonist</p>
                        <% } %>
        </div>
    </div>
</body>
</html>